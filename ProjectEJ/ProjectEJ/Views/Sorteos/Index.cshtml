@model IEnumerable<ProjectEJ.Models.Sorteos>

@{
    ViewBag.Title = "Index";
}

<h2>Sorteos</h2>

<p>
    @Html.ActionLink("Crear nuevo sorteo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha sorteo
        </th>
        <th>
            Descripción
        </th>
        <th>
           Sorteo activo
        </th>
        <th>
            Sorteo finalizado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Expiracion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Is_Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Is_Finished)
        </td>
        <td>
            @Html.ActionLink("Editar sorteo", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Eliminar sorteo", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
